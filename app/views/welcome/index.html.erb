<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-left">
                <h1>Uneasy Chair</h1>
                <p>Conferencing made easy</p>
            </div>
            <% if !user_signed_in? %>
            <div class="col-md-4">
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="form-group">
                  <div><%= f.text_field :username, class:'form-control', placeholder: 'Username' %></div>
                  <br>
                  <div><%= f.text_field :name, class:'form-control',placeholder: 'Name' %></div>
                  <br>
                  <div><%= f.email_field :email, class:'form-control', placeholder: 'Email' %></div>
                  <br>
                  <div><%= f.password_field :password, class:'form-control', placeholder: 'Password' %></div>
                  <br>
                  <div><%= f.password_field :password_confirmation, class:'form-control', placeholder: 'Confirm Password' %></div>
                </div>
                <%= f.hidden_field :admin, :value => false %>
                <%= f.hidden_field :chairable, :value => false %>
                <div><%= f.submit "Sign up", class:'btn btn-primary' %></div>
            <% end %>
            </div>
            <% end %>
        </div>
      </div>
</div>

