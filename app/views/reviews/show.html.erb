<% @user = current_user  %>
<% @paper = @review.paper  %>

<p>
  <strong>Score:</strong>
  <%= @review.score %>
</p>

<p>
  <strong>Date:</strong>
  <%= @review.date %>
</p>

<p>
  <% if @paper.user.id != @user.id  %>
  <strong>Reviewer:</strong>
  <%= @review.reviewer %>
  <% end %>
</p>

<p>
  <strong>Confidence:</strong>
  <%= @review.confidence %>
</p>

<p>
  <strong>Review:</strong>
  <%= @review.review %>
</p>
<% if !@review.review.equal?(nil) %>
  <% for rebuttle in @review.rebuttle do%>
    <p>
      <strong>Author's rebuttle:</strong>
        <%= rebuttle.authorRebuttle %>
    </p>
    <% end %>

<% end %>

<% if @paper.user.id == @user.id %>
  <% if @review.rebuttle.empty? %>
    <%= link_to 'Rebute', new_rebuttle_path(:rID => @review.id), :action => "Create",
            :class => "btn btn-primary btn-sm active" %>
  <%end%>
<% end %>

<% if @review.user_id == @user.id %>
<%= link_to 'Edit', edit_review_path(@review), :class => "btn btn-primary btn-sm active"  %>
<% end %>
<%= link_to 'Back', paper_path(@review.paper_id), :class => "btn btn-primary btn-sm active" %>
