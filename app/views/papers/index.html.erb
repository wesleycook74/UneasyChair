<p id="notice"><%= notice %></p>

<h1>Papers</h1>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Doc url</th>
      <th>Author</th>
      <th>Track</th>
      <th>Accepted</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @papers.each do |paper| %>
      <tr>
        <td><%= paper.title%></td>
        <td><%= link_to "Download Paper", paper.attachment_url %></td>
        <td><%= paper.author %></td>
        <td><%= paper.track.name %></td>
        <td><%= paper.accepted %></td>
        <td><%= link_to 'Show', paper %></td>
        <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
        <td><%= link_to 'Destroy', paper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Paper', new_paper_path %>
